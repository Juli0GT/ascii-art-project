{
  "compilerOptions": {
    "target": "es2019",
    "alwaysStrict": true,
    "outDir": "./build",
    "allowJs": false,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.js",
  ],
  "exclude": [
    "node_modules"
  ]
}